<Window x:Class="QuizGameJosef2025.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizGameJosef2025"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="QuestionText"
                   Grid.Row="0"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"/>

        <StackPanel Grid.Row="1" Margin="20">
            <RadioButton x:Name="A1" FontSize="18" Margin="0,5"/>
            <RadioButton x:Name="A2" FontSize="18" Margin="0,5"/>
            <RadioButton x:Name="A3" FontSize="18" Margin="0,5"/>
        </StackPanel>
        
        

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20">
            <Button x:Name="NextButton"
                    Content="Nästa"
                    Width="120"
                    Margin="0,0,20,0"
                    Click="NextButton_Click"/>
            <Button Content="Spara Quiz" Width="120" Click="SaveQuiz_Click"/>
            <Button Content="Ladda Quiz" Width="120" Click="LoadQuiz_Click"/>

            <TextBlock x:Name="ScoreText"
                       FontSize="16"
                       VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

