<Window x:Class="QuizGameJosef2025.EditQuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redigera quiz" Height="500" Width="650">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Quiz-namn:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="QuizNameTextBox" Width="200" Margin="0,0,10,0"/>
            <Button Content="Ladda" Width="100" Click="Load_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <ListBox x:Name="QuestionsListBox"
                     Grid.Column="0"
                     Margin="0,0,10,0"
                     SelectionChanged="QuestionsListBox_SelectionChanged"/>

            <StackPanel Grid.Column="1">
                <TextBlock Text="Fråga"/>
                <TextBox x:Name="QuestionTextBox" Height="60" TextWrapping="Wrap" Margin="0,0,0,10"/>

                <TextBlock Text="Svar 1"/>
                <TextBox x:Name="Answer1TextBox" Margin="0,0,0,5"/>

                <TextBlock Text="Svar 2"/>
                <TextBox x:Name="Answer2TextBox" Margin="0,0,0,5"/>

                <TextBlock Text="Svar 3"/>
                <TextBox x:Name="Answer3TextBox" Margin="0,0,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                    <TextBlock Text="Rätt svar:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="CorrectIndexComboBox" Width="120">
                        <ComboBoxItem Content="Svar 1"/>
                        <ComboBoxItem Content="Svar 2"/>
                        <ComboBoxItem Content="Svar 3"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Spara fråga"
                            Width="120"
                            Margin="0,0,10,0"
                            Click="SaveQuestion_Click"/>
                    <Button Content="Spara quiz"
                            Width="120"
                            Click="SaveQuiz_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <TextBlock Grid.Row="2"
                   x:Name="StatusText"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
